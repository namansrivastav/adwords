
<div class = "container">

  <div class="row">
    <div class= "col-xs-2">&nbsp;</div>
    <div class= "col-xs-6"><h3>Existing Files:</h3></div>
    <div class= "col-xs-4"></div>
  </div>
    <br><br>
    <div class ="row">
      <div class = "col-xs-2">&nbsp;</div>

      <div class = "col-xs-8">
        <table class="table table-striped table-responsive table-bordered">

          <tr>
            <th>User Email</th>
            <th>Filename</th>
            <th></th><th></th>
          </tr>



          <% @homes.each do |home| %>
            <% if home.user_id == current_user.id %>
            <tr>
              <% useremail= User.find(home.user_id) %>
              <td><%= useremail.email  %></td>
              <td><%= home.data_file_name %></td>
              <td><%=link_to 'Show', home_path(home), class: 'btn btn-primary btn-xs'%></td>
              <td><%=link_to 'Delete', home_path(home),method: :delete , data: {confirm: 'Are you sure'} , class: 'btn btn-danger btn-xs'%>
              </td>
            </tr>
            <% end %>
          <% end %>

        </table>
      </div>
    </div>
    <div class = "col-xs-2">&nbsp;</div>
  </div>
</div>