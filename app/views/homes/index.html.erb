
<div class = "container">

  <div class="row">
    <div class= "col-xs-2">&nbsp;</div>
    <div class= "col-xs-6"><h3>Existing Files:</h3></div>
    <div class= "col-xs-4"><%= link_to 'Upload new file', new_home_path %></div>
  </div>
    <br><br>
    <div class ="row">
      <div class = "col-xs-2">&nbsp;</div>

      <div class = "col-xs-8">
        <table class="table table-striped table-responsive table-bordered">

          <tr>
            <th>Username</th>
            <th>Filename</th>
            <th></th>
          </tr>



          <% @homes.each do |home| %>
          <tr>
            <td><%= home.username %></td>
            <td><%= home.data_file_name %></td>
            <td><%=link_to 'Show', home_path(home)%></td>
          </tr>
          <% end %>

        </table>
      </div>
    </div>
    <div class = "col-xs-2">&nbsp;</div>
  </div>
</div>