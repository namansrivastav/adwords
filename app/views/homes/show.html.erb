<div class = "container">

	<div class="row">
		<div class= "col-xs-2">&nbsp;</div>
		<div class= "col-xs-6"><h2>File Details::</h2></div>
		<div class= "col-xs-4"></div>
	</div>
	<br><br>
	<div class ="row">
		<div class = "col-xs-2">&nbsp;</div>

		<div class = "col-xs-8">
		<div class ="row">
			<div class = "col-xs-6">
				<%= form_for :home, {method: :get , :action => 'show'}  do|f|%>
				<%= f.label :Enter_word_to_search_in_Ad_URLs%>
					<div class="form-group">
						<div class="col-xs-9">
							<%= f.text_field :findword , class: "form-control"%><br>
						</div>
						
						<div class="col-xs-3">
							<%= f.submit "Search" , class: "btn btn-default"%>
						</div>			
					</div>
				<%end%>
			</div>
			<div class = "col-xs-6">
				<%= form_for :home, {method: :get , :action => 'show'}  do|f|%>
				<%= f.label :Enter_URL_that_shows_up_in_SEO%>
					<div class="form-group">
						<div class="col-xs-9">
							<%= f.text_field :findurl , class: "form-control"%><br>
						</div>
						
						<div class="col-xs-3">
							<%= f.submit "Search" , class: "btn btn-default"%>
						</div>			
					</div>
				<%end%>
			</div>
		</div>
				
			<% @filedet.each do|fl|%>
				<table class="table table-striped table-responsive table-bordered">
					<tr>
						<th>Keyword:</th>
						<td><%=fl.getword%></td>
					</tr>
					<tr>
						<th>No. AdWords in top</th>
						<td><%=fl.topadurl.count%></td>
					</tr>
					<tr>
						<th>AdWords in right</th>
						<td><%=fl.rightadurl.count%></td>
					</tr>
					<tr>
						<th>Total no. of AdWords</th>
						<td><%= fl.topadurl.count + fl.rightadurl.count%></td>
					</tr>
					<tr><th>URLs of top Adwords</th>
						<td>
							<%if fl.topadurl.count<1%>
							<%= "None"%>
							<%else%>
								<% fl.topadurl.size.times do |item|%>
								<%=fl.topadurl[item]%><br>
								<%end%>
							<%end%>
						</td>
					</tr>
					<tr><th>URLs of right Adwords</th>
						<td>
							<%if fl.rightadurl.count<1%>
							<%= "None"%>
							<%else%>
								<% fl.rightadurl.size.times do |item|%>
								<%=fl.rightadurl[item]%><br>
								<%end%>
							<%end%>
						</td>
					</tr>
					<tr>
						<th>No. of non Adwords</th>
						<td><%=fl.normalurl.count%></td>
					</tr>
					<tr>
						<th>URL of non-AdWords in top</th>
						<td>
							<%if fl.normalurl.count<1%>
							<%= "None"%>
							<%else%>
								<% fl.normalurl.size.times do |item|%>
								<%=fl.normalurl[item]%><br>
								<%end%>
							<%end%>
						</td>
					</tr>
					<tr>
						<th>Total no. of link</th>
						<td><%= fl.topadurl.count + fl.rightadurl.count + fl.normalurl.count%></td>
					</tr>
					<tr>
						<th>Total no. of search</th>
						<td><%=fl.totalsearch%></td>
					</tr>
					<!-- <tr>
						<th>AdWords in right</th>
						<td><%#=fl.pagedetail%></td>
					</tr> -->
				</table>
			<%end%>
			<%= paginate(@filedet) %>
		</div>
	
		<div class = "col-xs-2">&nbsp;</div>
	</div>
</div>
</div>